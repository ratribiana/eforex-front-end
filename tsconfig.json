{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zwap/api-interface": ["libs/api-interface/src/index.ts"],
      "@zwap/core/authentication": ["libs/core/authentication/src/index.ts"],
      "@zwap/material": ["libs/material/src/index.ts"],
      "@zwap/static-pages": ["libs/static-pages/src/index.ts"],
      "@zwap/core/api": ["libs/core/api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
